<openerp>
    <data>

        <record id="view_transsmart_carrier_form" model="ir.ui.view">
            <field name="name">transsmart.carrier.form</field>
            <field name="model">transsmart.carrier</field>
            <field name="arch" type="xml">
                <form string="Carrier">
                    <group col="4">
                        <field name="code"/>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_transsmart_carrier_tree" model="ir.ui.view">
            <field name="name">transsmart.carrier.tree</field>
            <field name="model">transsmart.carrier</field>
            <field name="arch" type="xml">
                <tree string="Carriers">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record
            id="action_transsmart_carrier_form"
            model="ir.actions.act_window">
            <field name="name">Carriers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">transsmart.carrier</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'active_test': False}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    You cannot create carriers here.
                </p>
                <p>
                    After you configure your connection to Transsmart,
                    the carriers will be automatically be fetched
                    and kept synchronized.
                </p>
            </field>
        </record>

    </data>
</openerp>
