<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_delivery_web_service_settings_tree" model="ir.ui.view">
            <field name="name">view.delivery.web.service.tree</field>
            <field name="model">delivery.web.service</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="instance_user"/>
                    <field name="name"/>
                    <field name="url"/>
                    <field name="username"/>
                </tree>
            </field>
        </record>

        <record id="view_delivery_web_service_settings_form" model="ir.ui.view">
            <field name="name">view.delivery.web.service.form</field>
            <field name="model">delivery.web.service</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <header>                                                          
                            <button
                                type="object"
                                name="action_check_connection"
                                string="Check connection"
                                />
                            <button
                                type="object"
                                name="action_synchronize"
                                string="Synchronize"
                                />
                        </header>                                                          
                        <group name="group_top">
                            <field name="instance_user"/>
                            <field name="name"/>
                            <field name="url"/>
                            <field name="username"/>
                            <field name="password" password="True"/>
                            <field name="account"/>
                            <field name="synchronization_time"/>
                        </group>
                    </sheet>
                </form>
           </field>
        </record>

        <act_window
            id="action_delivery_web_service_settings"
            name="Web Service Connection"
            res_model="delivery.web.service"
            view_type="form"
            view_mode="tree,form"
            />

   </data>
</openerp>
