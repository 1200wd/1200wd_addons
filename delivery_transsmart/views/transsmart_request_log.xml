<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="transsmart_request_log_form" model="ir.ui.view">
            <field name="name">Transsmart.request.log</field>
            <field name="model">transsmart.request.log</field>
            <field name="arch" type="xml">
                <form string="Transsmart request log">
                    <group>
                        <field name="request_timestamp"/>
                        <field name="request_url"/>
                        <field name="request_payload"/>
                        <field name="response_ok"/>
                        <field name="response_data"/>
                    </group>
               </form>
           </field>
        </record>

        <record id="transsmart_request_log_tree" model="ir.ui.view">
            <field name="name">Transsmart.request.log</field>
            <field name="model">transsmart.request.log</field>
            <field name="arch" type="xml">
                <tree string="Transsmart request log">
                    <field name="request_timestamp"/>
                    <field name="request_url"/>
                    <field name="response_ok"/>
               </tree>
           </field>
        </record>

        <record id="transsmart_request_log_search" model="ir.ui.view">
            <field name="name">Transsmart.request.log</field>
            <field name="model">transsmart.request.log</field>
            <field name="arch" type="xml">
                <search string="Transsmart request log">
                    <field name="request_timestamp"/>
                    <field name="request_url"/>
                    <field name="response_ok"/>
                    <filter
                        string="Errors"
                        name="error_response"
                        domain="[('response_ok', '=', False)]"
                        help="Calls that resulted in error response."
                        />
               </search>
           </field>
        </record>

        <record
            id="action_transsmart_request_log"
            model="ir.actions.act_window"
            >
            <field name="name">Transsmart Request log</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">transsmart.request.log</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="menu_transsmart_request_log"
            name="Transsmart Request log"
            parent="menu_transsmart_configuration"
            sequence="20"
            action="action_transsmart_request_log"
            />

   </data>
</openerp>
