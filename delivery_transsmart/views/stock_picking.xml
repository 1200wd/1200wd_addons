<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_picking_transsmart_out_form" model="ir.ui.view">
            <field name="name">transsmart.stock.picking.form.view</field>
            <field name="model">stock.picking</field>
            <field
                name="inherit_id"
                ref="delivery.view_picking_withcarrier_out_form"
                />
            <field name="arch" type="xml">

                <xpath expr="//header//field[@name='state']" position="before">
                    <button
                        type="object"
                        name="action_transsmart_get_rates"
                        string="Get Rates"
                        groups="base.group_system"
                        attrs="{'invisible': [('picking_type_code','!=','outgoing')]}"
                        />
                    <button
                        type="object"
                        name="action_transsmart_prebooking"
                        string="Prebooking"
                        groups="stock.group_stock_manager"
                        attrs="{'invisible': [('picking_type_code','!=','outgoing')]}"
                        />
                </xpath>

                <xpath expr="//field[@name='carrier_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="string">Delivery Method</attribute>
                </xpath>

                <xpath
                    expr="//field[@name='carrier_id']" position="after">
                    <field name="delivery_service_level_time_id"/>
                    <field name="cost_center_id"/>
                    <field name="service_level_other_id"/>
                    <field name="transsmart_carrier_id"/>
                    <field name="delivery_cost_currency_id" invisible="1" />
                    <field
                        name="delivery_cost"
                        groups="stock.group_stock_manager"
                        widget="monetary"
                        options="{'currency_field': 'delivery_cost_currency_id'}"
                        />
                    <field name="incoterm_id"/>
                    <field name="service"/>
                    <field name="package_type_id"/>
                </xpath>

                <xpath
                    expr="//field[@name='carrier_tracking_ref']"
                    position="attributes"
                    >
                    <attribute name="widget">url</attribute>
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page
                        id="page_transsmart_rates"
                        string="Rates"
                        groups="base.group_system"
                        >
                        <group id="group_transsmart_rates" colspan="6" col="1">
                            <separator string="Rates" />
                            <field name="rate_line_ids" nolabel="1">
                                <tree>
                                    <field name="name" />
                                    <field name="price" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

        <record
            id="view_picking_internal_search_transsmart" model="ir.ui.view">
            <field name="name">search.transssmart</field>
            <field name="model">stock.picking</field>
            <field
                name="inherit_id"
                ref="stock.view_picking_internal_search"
                />
            <field name="arch" type="xml">

                <xpath
                    expr="//filter[@string='Procurement Group']"
                    position="after"
                    >
                    <filter
                        name="service_level_time_filter"
                        string="Service Level Time"
                        context="{'group_by':'delivery_service_level_time_id_id'}"
                        />
                </xpath>

            </field>
        </record>

    </data>
</openerp>
