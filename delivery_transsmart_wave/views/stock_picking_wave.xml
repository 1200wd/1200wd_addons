<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
         
        <record id="view_picking_wave_form" model="ir.ui.view">
            <field name="name">transsmart_confirmed_picking_wave</field>
            <field name="model">stock.picking.wave</field>
            <field name="inherit_id" ref="stock_picking_wave.view_picking_wave_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="transsmart_confirmed"/>
                </xpath>
                <xpath
                    expr="//div[@class='oe_right oe_button_box']"
                    position="inside"
                    >
                    <button
                        name="action_create_transsmart_document"
                        type="object"
                        string="Create in Transsmart"
                        >
                    </button>
                </xpath>
            </field>
        </record>
         
    </data>
</openerp>
