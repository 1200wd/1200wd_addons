<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_stock_product_forecasted_tree" model="ir.ui.view">
            <field name="name">product.stock.forecasted.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_stock_product_tree"/>
            <field name="arch" type="xml">
                <field name="virtual_available" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="virtual_available" position="after">
                    <field name="qty_forecasted"/>
                </field>
            </field>
        </record>

        <record id="view_stock_product_template_forecasted_tree" model="ir.ui.view">
            <field name="name">product.template.forecasted.tree</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
            <field name="arch" type="xml">
                <field name="virtual_available" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="virtual_available" position="after">
                    <field name="qty_forecasted"/>
                </field>
            </field>
        </record>

        <!-- TODO: Add/update search views, ie product_template_search_form_view_stock -->

        <record id="view_product_template_property_forecasted_form" model="ir.ui.view">
            <field name="name">product.template.property.forecasted.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="arch" type="xml">
                <field name="virtual_available" position="after">
                    <field name="qty_forecasted"/>
                </field>
            </field>
        </record>

        <record id="product_template_kanban_stock_view" model="ir.ui.view">
            <field name="name">product.template.stock.forecasted.kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_kanban_stock_view"/>
            <field name="arch" type="xml">
                <ul position="replace">
                    <li t-if="record.type.raw_value != 'service'">On hand: <field name="qty_available"/> <field name="uom_id"/></li>
                    <li t-if="record.type.raw_value != 'service'">Forecasted: <field name="qty_forecasted"/> <field name="uom_id"/></li>
                </ul>
            </field>
        </record>

    </data>
</openerp>