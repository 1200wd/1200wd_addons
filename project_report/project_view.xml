<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_task_search_form_ext" model="ir.ui.view">
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@string='New Mail']" position="after">
                    <seperator/>
                    <filter string="Hide Closed" domain="[('stage_id.fold','=',False)]"/>
                </xpath>
            </field>
        </record>

        <report id="report_project_overview_action"
                string="Project Tasks &amp; Issues"
                model="project.project"
                report_type="qweb-pdf"
                name="project_extended.report_project_overview"
        />

    </data>
</openerp>
