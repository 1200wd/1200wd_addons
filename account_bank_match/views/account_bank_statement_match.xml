<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_account_bank_statement_match_reference_tree" model="ir.ui.view" >
            <field name="name">view.account.bank.statement.match.reference.tree</field>
            <field name="model">account.bank.statement.match.reference</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="model"/>
                    <field name="sequence"/>
                    <field name="account_bank_id"/>
                    <field name="account_account_id"/>
                    <field name="score"/>
                    <field name="score_item"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_account_bank_statement_match_reference_form" model="ir.ui.view" >
            <field name="name">view.account.bank.statement.match.reference.form</field>
            <field name="model">account.bank.statement.match.reference</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_top">
                            <field name="name"/>
                            <field name="model"/>
                            <field name="sequence"/>
                            <field name="account_bank_id"/>
                            <field name="account_account_id"/>
                            <field name="score"/>
                            <field name="score_item"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_account_bank_statement_match_reference_search" model="ir.ui.view">
            <field name="name">view.account.bank.statement.match.reference.search</field>
            <field name="model">account.bank.statement.match.reference</field>
            <field name="arch" type="xml">
                <search string="Match Reference">
                    <field name="name"/>
                    <group string="Group By">
                        <filter string="Model" context="{'group_by':'model'}"/>
                        <filter string="Bank Account" context="{'group_by':'account_bank_id'}"/>
                        <filter string="Account Journal" context="{'group_by':'account_account_id'}"/>
                        <filter string="Company" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_account_bank_statement_match_tree" model="ir.ui.view">
            <field name="name">view.account.bank.statement.match.tree</field>
            <field name="model">account.bank.statement.match</field>
            <field name="arch" type="xml">
                <tree create="false" delete="false" edit="true">
                    <field name="statement_line_id" invisible="1"/>
                    <field name="model"/>
                    <field name="name"/>
                    <field name="so_ref"/>
                    <field name="description"/>
                    <field name="score"/>
                </tree>
            </field>
        </record>

        <record id="view_account_bank_statement_line_matches_form" model="ir.ui.view" >
            <field name="name">view.account.bank.statement.line.matches.form</field>
            <field name="model">account.bank.statement.line</field>
            <field name="priority">50</field>
            <field name="arch" type="xml">
                <form string="Statement Line" create="false" delete="false">
                    <group col="4" readonly="1">
                        <field name="statement_id" readonly="1"/>
                        <field name="journal_id" readonly="1" invisible="1"/>
                        <field name="journal_code" readonly="1"/>
                        <field name="date" readonly="1"/>
                        <field name="name" readonly="1"/>
                        <field name="ref" readonly="1"/>
                        <field name="partner_name" readonly="1"/>
                        <field name="partner_id" readonly="1"/>
                        <field name="remote_account" readonly="1"/>
                        <field name="bank_account_id" readonly="1"/>
                        <field name="amount" readonly="1"/>
                        <button name="account_bank_match" string="_Refresh Matches" type="object" class="oe_highlight"/>
                    </group>
                    <notebook>
                        <page string="Matches">
                            <field name="match_ids"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_account_bank_statement_match_form" model="ir.ui.view">
            <field name="name">view.account.bank.statement.match.form</field>
            <field name="model">account.bank.statement.match</field>
            <field name="arch" type="xml">
                <form string="Statement Line Match">
                    <group col="4">
                        <field name="statement_line_id" readonly="1"/>
                        <field name="model" readonly="1"/>
                        <field name="name" readonly="1"/>
                        <field name="description" readonly="1"/>
                        <field name="score" readonly="1"/>
                    </group>
                    <group col="2">
                        <field name="writeoff_difference" attrs="{'invisible':[('payment_difference', '==', 0)]}"/>
                        <field name="payment_difference" widget="monetary" options="{'currency_field': 'currency_id'}"
                               attrs="{'invisible':['|',('payment_difference', '==', 0), ('writeoff_difference', '==', False)]}" readonly="0"/>
                        <field name="writeoff_journal_id"
                               attrs="{'invisible':['|',('payment_difference', '==', 0), ('writeoff_difference', '==', False)]}" readonly="0"/>
                    </group>
                    <footer>
                        <button name="action_match_confirm" string="Confirm match with statement line" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_account_bank_statement_match_search" model="ir.ui.view">
            <field name="name">view.account.bank.statement.match.search</field>
            <field name="model">account.bank.statement.match</field>
            <field name="arch" type="xml">
                <search string="statement_line">
                    <field name="statement_line_id"/>
                </search>
            </field>
        </record>

        <record id="view_account_bank_statement_match_rule_tree" model="ir.ui.view">
            <field name="name">view.account.bank.statement.match.rule.tree</field>
            <field name="model">account.bank.statement.match.rule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="model"/>
                    <field name="score"/>
                    <field name="score_item"/>
                    <field name="type"/>
                    <field name="company_id"/>
                    <field name="rule"/>
                </tree>
            </field>
        </record>

        <record id="view_account_bank_statement_match_rule_search" model="ir.ui.view">
            <field name="name">view.account.bank.statement.match.rule.search</field>
            <field name="model">account.bank.statement.match.rule</field>
            <field name="arch" type="xml">
                <search string="Match Rules">
                    <field name="name"/>
                    <field name="rule"/>
                    <group string="Group By">
                        <filter string="Model" context="{'group_by':'model'}"/>
                        <filter string="Type" context="{'group_by':'type'}"/>
                        <filter string="Company" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_account_bank_statement_match_rule_form" model="ir.ui.view">
            <field name="name">view.account.bank.statement.match.rule.form</field>
            <field name="model">account.bank.statement.match.rule</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_top">
                            <field name="name"/>
                            <field name="model"/>
                            <field name="score"/>
                            <field name="score_item"/>
                            <field name="type"/>
                            <field name="active"/>
                            <field name="company_id"/>
                            <field name="rule"/>
                            <field name="script"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <act_window id="action_account_bank_statement_match_view"
                    name="Bank Statement Lines Matches"
                    res_model="account.bank.statement.match"
                    view_type="form"
                    view_mode="tree,form"/>

        <act_window id="action_account_bank_statement_match_reference_view"
                    name="Match Reference"
                    res_model="account.bank.statement.match.reference"
                    view_type="form"
                    view_mode="tree,form"/>

        <act_window id="action_account_bank_statement_match_rule_view"
                    name="Match Rules"
                    res_model="account.bank.statement.match.rule"
                    view_type="form"
                    view_mode="tree,form"/>

        <menuitem id="menu_bank_match"
                  name="Bank Match"
                  parent="account.menu_finance_configuration"
                  sequence="65"/>

        <menuitem id="menu_match_reference"
                  action="action_account_bank_statement_match_reference_view"
                  parent="menu_bank_match"
                  sequence="5"/>

        <menuitem id="menu_match_rule"
                  action="action_account_bank_statement_match_rule_view"
                  parent="menu_bank_match"
                  sequence="15"/>

        <menuitem id="menu_match_list"
                  action="action_account_bank_statement_match_view"
                  parent="menu_bank_match"
                  sequence="15"/>

    </data>
</openerp>
